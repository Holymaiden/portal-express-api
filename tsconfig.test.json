{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "module": "commonjs"
  },
  "include": [
    "jest.config.ts",
    "src/**/*.ts",
    "__test__/**/*.test.ts",
    "**/*.test.ts"
  ],
  "exclude": ["node_modules", "__test__", "dist"]
}
